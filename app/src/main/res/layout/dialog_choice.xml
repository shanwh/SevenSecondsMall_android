    <LinearLayout android:id="@+id/ll_items"
        android:layout_width="match_parent" android:divider="@drawable/light_grey_horizontal_divider" android:showDividers="middle"
        android:layout_height="wrap_content" android:orientation="vertical" >
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" android:background="@color/line_btn" />
    <TextView android:id="@+id/tv_cannel"
        android:layout_width="match_parent" android:background="@drawable/item_selector"
        android:layout_height="wrap_content" android:text="取消" android:gravity="center" android:padding="@dimen/dp_15dp" />
</LinearLayout>