<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="空空如也"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        />


    <RelativeLayout
        android:layout_width="@dimen/mar_90"
        android:layout_height="@dimen/mar_90"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/mar_25"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/tv_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刷新"
            android:paddingTop="@dimen/mar_5"
            android:layout_centerInParent="true"
            android:gravity="center"
            />

        <View
            android:id="@+id/refresh"
            android:layout_width="@dimen/mar_56"
            android:layout_height="@dimen/mar_56"
            android:layout_centerInParent="true"
            android:background="@drawable/fresh_button_bg"
            />

    </RelativeLayout>


</RelativeLayout>