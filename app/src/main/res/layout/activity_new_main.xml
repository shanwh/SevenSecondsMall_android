<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:background="@color/white"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragment_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_0"

            style="@style/main_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:checked="true"
            android:layout_weight="1" android:button="@null"
            android:background="@drawable/main_main_selector"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/rb_1"
            style="@style/main_tab"
            android:layout_width="0dp"  android:button="@null"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_play_selector"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/rb_2"
            style="@style/main_tab"
            android:layout_width="0dp"  android:button="@null"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_cart_selector"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/rb_3"
            style="@style/main_tab"  android:button="@null"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_mine_selector"
            android:gravity="center" />
    </RadioGroup>
</LinearLayout>