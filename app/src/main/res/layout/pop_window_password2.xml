<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:text="请输入支付密码"
            android:id="@+id/tv_top"
            android:textSize="20sp" />

        <com.yidu.sevensecondmall.views.widget.iconfonts.IconFontTextView
            android:id="@+id/if_tv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/back"
            android:textSize="13sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="@dimen/mar_15"
        android:background="@drawable/alert_dialog_bg"
        >

        <TextView
            android:id="@+id/tv_password1"
            style="@style/style_tv_password" />
        <TextView
            android:id="@+id/tv_password2"
            style="@style/style_tv_password" />
        <TextView
            android:id="@+id/tv_password3"
            style="@style/style_tv_password" />
        <TextView
            android:id="@+id/tv_password4"
            style="@style/style_tv_password" />
        <TextView
            android:id="@+id/tv_password5"
            style="@style/style_tv_password" />
        <TextView
            android:id="@+id/tv_password6"
            style="@style/style_tv_password" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_find_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="忘记密码?"
        android:padding="@dimen/mar_13"
        android:textColor="@color/btn_blue_normal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/t1"
            android:text="1"
            style="@style/style_password_num" />
        <TextView
            android:id="@+id/t2"
            android:text="2"
            style="@style/style_password_num" />
        <TextView
            android:id="@+id/t3"
            android:text="3"
            style="@style/style_password_num" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/t4"
            android:text="4"
            style="@style/style_password_num" />
        <TextView
            android:id="@+id/t5"
            android:text="5"
            style="@style/style_password_num" />
        <TextView
            android:id="@+id/t6"
            android:text="6"
            style="@style/style_password_num" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/t7"
            android:text="7"
            style="@style/style_password_num" />
        <TextView
            android:id="@+id/t8"
            android:text="8"
            style="@style/style_password_num" />
        <TextView
            android:id="@+id/t9"
            android:text="9"
            style="@style/style_password_num" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/t"
            style="@style/style_password_num" />
        <TextView
            android:id="@+id/t0"
            android:text="0"
            style="@style/style_password_num" />
        <TextView
            android:id="@+id/tX"
            android:text="×"
            style="@style/style_password_num" />

    </LinearLayout>

</LinearLayout>