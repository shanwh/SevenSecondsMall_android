<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_top"
        android:background="@color/app_theme" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/v">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1653dp"
                android:background="@color/app_theme">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/buy"
                    android:layout_width="@dimen/mar_80"
                    android:layout_height="@dimen/mar_80"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="188dp"
                    android:src="@drawable/gold_btn" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


    <com.yidu.sevensecondmall.views.widget.iconfonts.IconFontTextView
        android:id="@+id/icon_share"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/mar_15"
        android:background="@drawable/share_drawable"
        android:gravity="center"
        android:text="@string/icon_share"
        android:textColor="@color/app_theme"
        android:textSize="26sp"
        android:visibility="visible" />
</RelativeLayout>