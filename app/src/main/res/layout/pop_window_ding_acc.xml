<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="210dp"
    android:layout_height="wrap_content"
    android:background="@drawable/alertdiag_bg"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认转换"
        android:textColor="@color/app_theme"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/mar_15"
        android:layout_marginBottom="@dimen/mar_20"
    />

    <LinearLayout
        android:layout_marginLeft="@dimen/mar_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_ding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_theme"
            android:textSize="15sp"
            android:text="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DING宝="
            android:textSize="15sp"
            android:textColor="@color/colorBottomBlack"
            />
        <TextView
            android:id="@+id/tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_theme"
            android:text="1"
            android:textSize="15sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加速齿轮值"
            android:textSize="15sp"
            android:textColor="@color/colorBottomBlack"
            />
    </LinearLayout>
    
    <LinearLayout
        android:layout_marginLeft="@dimen/mar_15"
        android:layout_marginTop="@dimen/mar_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#919191"
            android:text="本次消耗："
            />

        <TextView
            android:id="@+id/tv_ding2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_theme"
            android:text="DING宝"
            android:textSize="15sp"

            />
    </LinearLayout>
    <View
        android:id="@+id/line"
        android:layout_width="210dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/mar_20"
        android:layout_above="@id/ll_bottom_tab"
        android:background="#337c7c7c" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mar_15"
        android:layout_marginBottom="@dimen/mar_15"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape_while"
            android:paddingLeft="@dimen/mar_15"
            android:paddingRight="@dimen/mar_15"
            android:paddingTop="@dimen/mar_7"
            android:paddingBottom="@dimen/mar_7"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/app_theme"
            android:text="取消"
            />

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:paddingLeft="@dimen/mar_15"
            android:paddingRight="@dimen/mar_15"
            android:paddingTop="@dimen/mar_7"
            android:paddingBottom="@dimen/mar_7"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="确认"
            android:layout_marginLeft="@dimen/mar_25"

            />


    </LinearLayout>

</LinearLayout>