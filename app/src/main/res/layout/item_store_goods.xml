<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="171dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/mar_8">

    <ImageView
        android:id="@+id/iv_goods_pic"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:src="@drawable/icon_video_default" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_hot_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_goods_name"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="@dimen/mar_3"
            android:background="@drawable/button_shape_red_3"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:text="热销"
            android:textSize="@dimen/textSize11"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_hot_pic"
            android:text="粉色爽肤水"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize5" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.yidu.sevensecondmall.views.widget.iconfonts.IconFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/mar_3"
            android:text="@string/icon_rmb"
            android:textSize="@dimen/mar_8" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45"
            android:textColor="@color/red"
            android:textSize="@dimen/textSize5" />

        <TextView
            android:id="@+id/tv_buypeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mar_15"
            android:layout_weight="1"
            android:text="200人付款"
            android:textSize="9sp" />

        <com.yidu.sevensecondmall.views.widget.iconfonts.IconFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mar_10"
            android:paddingRight="@dimen/mar_10"
            android:text="@string/icon_buy_car"
            android:id="@+id/add_buycar"
            android:textColor="@color/red"
            android:textSize="@dimen/textSize3" />
    </LinearLayout>

</LinearLayout>