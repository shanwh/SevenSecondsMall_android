<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/free_is_get"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:text="赠品已领取"
        android:textColor="@color/colorBottomBlack"
        android:layout_marginRight="30dp"
        />

    <RelativeLayout
        android:id="@+id/rl_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ll">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/martop_28"
            android:layout_marginRight="@dimen/mar_56"
            android:layout_marginTop="@dimen/mar_8"
            >

        <com.yidu.sevensecondmall.views.widget.GearView
            android:id="@+id/gv_big"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android_custom:bottomPic="@drawable/big_pic"
            android_custom:coverPic="@drawable/big_coverpic"
            android_custom:innerCircle1="true"
            android_custom:innerCircle2="true" />

            <TextView
                android:id="@+id/big_pronum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="28dp"
                android:text="25%"
                android:textColor="@color/red"
                android:textSize="12sp" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/mar_8"
            android:layout_marginRight="20dp"
            android:layout_marginTop="52dp">

            <com.yidu.sevensecondmall.views.widget.GearView
                android:id="@+id/gv_small"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android_custom:bottomPic="@drawable/small_pic"
                android_custom:coverPic="@drawable/small_coverpic" />

            <TextView
                android:id="@+id/small_pronum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="25%"
                android:textColor="@color/red"
                android:textSize="10sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/mar_3"
            android:gravity="center"
            android:text="点击加速"
            android:textColor="@color/colorGreenPb"
            android:textSize="7sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_get_or_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/mar_10"
            android:text="领取"
            android:textColor="@color/colorGreenPb"
            android:visibility="gone" />
    </RelativeLayout>

    <!--<TextView-->
