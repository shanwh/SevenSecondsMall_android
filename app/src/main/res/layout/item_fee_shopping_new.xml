    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="@dimen/mar_15">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号:" />

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="025184654813554"
                android:textColor="@color/colorBottomBlack" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/mar_5"
            android:layout_marginTop="@dimen/mar_5"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="付款日期:" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-09-09"
                android:textColor="@color/colorBottomBlack" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mar_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单金额:" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="288.00元"
                android:textColor="@color/colorBottomBlack" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:minHeight="18dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mar_10">

            <LinearLayout
                android:id="@+id/ll_assignment"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:visibility="visible"
                android:background="@drawable/button_shape"
                android:paddingBottom="@dimen/mar_5"
                android:paddingLeft="@dimen/mar_7"
                android:gravity="center_horizontal"
                android:paddingRight="@dimen/mar_7"
                android:paddingTop="@dimen/mar_5">

                <com.yidu.sevensecondmall.views.widget.iconfonts.IconFontTextView
                    android:id="@+id/if_assignment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/icon_assignment"
                    android:visibility="visible"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_assignment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/mar_5"
                    android:text="转让"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!--<TextView-->
                <!--android:id="@+id/tv_assignment"-->
                <!--android:layout_width="70dp"-->
                <!--android:layout_height="35dp"-->
                <!--android:background="@drawable/button_shape_green"-->
                <!--android:gravity="center"-->
