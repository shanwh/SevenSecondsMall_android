<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:visibility="gone"
        layout="@layout/title_head_layout"/>

    <include layout="@layout/base_toolbar"/>
    <include layout="@layout/toolbar_line"/>
    <RelativeLayout
        android:id="@+id/rl_return"
        style="@style/rl_my_set"
        android:background="@color/white">

        <TextView
            android:id="@+id/type"
            style="@style/tv_setting"
            android:textSize="16sp"
            android:text="请选择投诉类型" />

        <com.yidu.sevensecondmall.views.widget.iconfonts.IconFontTextView
            style="@style/if_tv_my_set"
            android:rotation="90"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_report"
            android:layout_height="174dp"
            android:layout_width="match_parent"
            android:hint="亲,想说什么都可以"
            android:gravity="top"
            android:paddingTop="18dp"
            android:paddingLeft="10dp"
            android:background="@color/white"
            android:textSize="12sp"/>

    </LinearLayout>

    <EditText
        android:id="@+id/tel_edit"
        android:layout_marginTop="@dimen/mar_15"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="@dimen/mar_20"
        android:hint="请留下您的手机号码，方便我们联系您(选填)"
        android:textSize="12sp"/>


    <Button
        android:id="@+id/submit"
        android:layout_height="wrap_content"
        android:layout_width="180dp"
        android:textSize="20sp"
        android:background="@drawable/round_edittext"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/mar_18" android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="提交"/>




</LinearLayout>