<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#3f7c7c7c"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:background="@color/white"
        >

        <com.yidu.sevensecondmall.views.widget.iconfonts.IconFontTextView
            android:id="@+id/if_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/mar_23"
            android:text="@string/icon_phone_pay"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/if_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/mar_22"
            android:layout_marginTop="16dp"
            android:text="手机充值"
            android:textColor="@color/colorBottomBlack" />
    </RelativeLayout>
</RelativeLayout>