<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/head"
        android:layout_height="60dp"
        android:layout_width="54dp"
        android:layout_marginTop="@dimen/mar_5"
        android:layout_marginLeft="@dimen/margin_size_10"
        android:layout_centerVertical="true"
        android:src="@drawable/default_loading_pic"/>


   <LinearLayout
       android:id="@+id/container"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/head"
       android:layout_marginTop="@dimen/margin_size_10"
       android:layout_marginLeft="@dimen/mar_33"
       android:orientation="vertical">

       <TextView
           android:id="@+id/name"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:text="xx经典双层便当盒，湖蓝色"
           android:textSize="14sp"/>

       <LinearLayout
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:layout_marginTop="@dimen/mar_8"
           android:orientation="horizontal">

           <com.yidu.sevensecondmall.views.widget.iconfonts.IconFontTextView
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:textSize="12sp"
               android:text="@string/icon_rmb"
               android:textColor="@color/light_red"/>

           <TextView
               android:id="@+id/price"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:textSize="12sp"
               android:layout_marginLeft="@dimen/mar_5"
               android:text="122"/>


       </LinearLayout>

       <TextView
           android:id="@+id/status"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:textColor="@color/white"
           android:textSize="12sp"
           android:background="@drawable/to_buy_bg"
           android:layout_marginTop="@dimen/mar_8"
           android:layout_gravity="end"
           android:layout_marginRight="16dp"
           android:paddingTop="@dimen/mar_5"
           android:paddingBottom="@dimen/mar_5"
           android:paddingLeft="@dimen/mar_10"
           android:paddingRight="@dimen/mar_10"
           android:text="还差8人即可享受免单"/>

       <TextView
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:layout_marginTop="@dimen/mar_3"
           android:textSize="9sp"
           android:textColor="@color/colorHint"
           android:layout_gravity="end"
           android:layout_marginRight="16dp"
           android:padding="@dimen/mar_5"
           android:text="免单之后可以在余额中体现"/>


   </LinearLayout>


    <LinearLayout
        android:layout_height="@dimen/line"
        android:layout_width="match_parent"
        android:background="@color/colorHint"
        android:layout_below="@+id/container"
        android:layout_marginTop="@dimen/mar_5"
        android:alpha="0.3"/>


</RelativeLayout>
