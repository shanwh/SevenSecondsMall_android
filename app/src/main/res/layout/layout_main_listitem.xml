            <!--android:paddingRight="@dimen/mar_15"-->
            <!--android:paddingTop="@dimen/mar_5"-->
            <!--android:text="去购买"-->
            <!--android:textColor="@color/white" />-->

    </RelativeLayout>


</LinearLayout>
