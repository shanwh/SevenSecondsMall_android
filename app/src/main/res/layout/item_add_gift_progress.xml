<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小柯柯"
            android:textColor="#333333"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/order_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="订单：KB02129067015887"
            android:textColor="#333333"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩余：¥ 2000000"
            android:textColor="@color/app_theme"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转让时间：2017-11-11 11:11:11"
                android:textColor="#a3a3a3"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:text="总金额：100，100.00"
                android:textColor="#a3a3a3"
                android:textSize="10dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已参与："
            android:textColor="#a3a3a3"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/people_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000"
            android:textColor="@color/app_theme"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人"
            android:textColor="#a3a3a3"
            android:textSize="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1">

        </android.support.v7.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/rl_progress"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_gravity="center">

            <com.yidu.sevensecondmall.views.widget.widget.CircularProgressBar
                android:id="@+id/circular_progress_bar"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="wrap_content" android:gravity="center"
                android:orientation="vertical" android:layout_centerVertical="true" android:id="@+id/pro_ll"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/progress_num"
                    android:layout_width="wrap_content"
                    android:text="72.53%"
                    android:textColor="@color/verticalTextColor"
                    android:textSize="10dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="点我加速"
                    android:textColor="@color/app_theme"
                    android:textSize="10dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="14dp">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="当前回购折扣：5折，20天后降为4折"
            android:textColor="#a3a3a3"
            android:textSize="10dp" />


    </RelativeLayout>
</LinearLayout>