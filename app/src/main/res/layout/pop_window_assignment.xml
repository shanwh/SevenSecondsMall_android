<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="150dp"
    android:background="@drawable/icon_assignment_buy_bg"
    android:orientation="vertical">

    <com.yidu.sevensecondmall.views.widget.iconfonts.IconFontTextView
        android:id="@+id/it"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/mar_5"
        android:text="@string/icon_cancel_success"
        android:textColor="@color/app_theme"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/mar_5"
        android:layout_marginRight="@dimen/mar_5"
        android:textSize="@dimen/text_size_13sp"
        android:lineSpacingExtra="@dimen/mar_3"
        android:layout_marginTop="@dimen/mar_20"
        android:text="恭喜!您的订单已支付成功"
        android:textColor="@color/app_theme" />

    <View
        android:id="@+id/line"
        android:layout_width="210dp"
        android:layout_height="1dp"
        android:layout_above="@id/ll_bottom_tab"
        android:layout_marginTop="@dimen/mar_20"
        android:background="#337c7c7c" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/mar_15"
        android:layout_marginTop="@dimen/mar_15">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_shape_while"
            android:gravity="center"
            android:paddingBottom="@dimen/mar_5"
            android:paddingLeft="@dimen/mar_15"
            android:paddingRight="@dimen/mar_15"
            android:paddingTop="@dimen/mar_5"
            android:text="知道了"
            android:textColor="@color/app_theme" />

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/mar_25"
            android:background="@drawable/button_shape"
            android:gravity="center"
            android:paddingBottom="@dimen/mar_5"
            android:paddingLeft="@dimen/mar_15"
            android:paddingRight="@dimen/mar_15"
            android:paddingTop="@dimen/mar_5"
            android:text="回首页"
            android:textColor="@color/white"

            />

    </LinearLayout>

</LinearLayout>